{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/exports": "warn",
    "simple-import-sort/imports": [
      "warn",
      {
        "groups": [["^\\u0000", "^@?\\w", "^", "^\\."]]
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
